# Makefile for building 'school' executable
# Variables
CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic
HEADER = m.h

.PHONY: all clean oclean fclean re

# Rule: all
all: $(NAME)

# Target: $(NAME) (executable)
$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

# Rule: recompile only the updated source files
$(OBJ): $(SRC) $(HEADER)
	$(CC) $(CFLAGS) -c $< -o $@

# Rule: clean
clean:
	$(RM) *~ *# $(NAME)

# Rule: oclean (dlete object files)
oclean:
	$(RM) $(OBJ)

# Rule: fclean
fclean: clean oclean

# Rule: re
re: fclean all
